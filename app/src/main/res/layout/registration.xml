<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fullayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color1"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.iamretailer.Common.CustomTextview
                android:id="@+id/testcustomview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp35"
                android:layout_marginTop="@dimen/dp40"
                android:gravity="start"
                android:text="@string/sign"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/text26sp"
                android:textStyle="bold" />

            <com.iamretailer.Common.CustomTextViewLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp35"
                android:text="@string/join_the_community"
                android:textColor="@color/sub_text"
                android:textSize="@dimen/text14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp20"
                android:layout_marginStart="@dimen/dp20"
                android:layout_marginTop="@dimen/dp40"
                android:background="@drawable/login_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp45"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dp20"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp20">

                    <ImageView
                        android:layout_width="@dimen/dp30"
                        android:layout_height="@dimen/dp25"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/dp2"
                        android:layout_marginEnd="@dimen/dp10"
                        android:autoMirrored="true"
                        android:contentDescription="@null"
                        android:padding="@dimen/dp3"
                        android:rotationY="@integer/locale_mirror_flip"
                        android:src="@mipmap/users" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/Username"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp45"
                        android:theme="@style/LoginEditTexts">

                        <com.iamretailer.Common.CustomEditext
                            android:id="@+id/full_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/dp3"
                            android:background="@drawable/login_edit_bg"
                            android:gravity="center_vertical"
                            android:hint="@string/frist_name"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:paddingBottom="@dimen/dp5"
                            android:singleLine="true"
                            android:textColor="@color/app_text_color"
                            android:textColorHint="@color/plceholder"
                            android:textSize="@dimen/text15sp"

                            />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp45"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dp20"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp20">

                    <ImageView
                        android:layout_width="@dimen/dp30"
                        android:layout_height="@dimen/dp25"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/dp2"
                        android:layout_marginEnd="@dimen/dp10"
                        android:autoMirrored="true"
                        android:contentDescription="@null"
                        android:padding="@dimen/dp3"
                        android:rotationY="@integer/locale_mirror_flip"
                        android:src="@mipmap/users" />

                    <android.support.design.widget.TextInputLayout

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp45"
                        android:theme="@style/LoginEditTexts">


                        <com.iamretailer.Common.CustomEditext
                            android:id="@+id/username2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/dp3"
                            android:background="@drawable/login_edit_bg"
                            android:gravity="center_vertical"
                            android:hint="@string/last_name"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:paddingBottom="@dimen/dp5"
                            android:singleLine="true"
                            android:textColor="@color/app_text_color"
                            android:textColorHint="@color/plceholder"
                            android:textSize="@dimen/text15sp"

                            />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp45"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dp20"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp20">

                    <ImageView
                        android:layout_width="@dimen/dp30"
                        android:layout_height="@dimen/dp25"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/dp10"
                        android:autoMirrored="true"
                        android:contentDescription="@null"
                        android:padding="@dimen/dp4"
                        android:rotationY="@integer/locale_mirror_flip"
                        android:src="@mipmap/mailss" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp45"
                        android:theme="@style/LoginEditTexts">


                        <com.iamretailer.Common.CustomEditext
                            android:id="@+id/mailid"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/dp3"
                            android:background="@drawable/login_edit_bg"
                            android:gravity="center_vertical"
                            android:hint="@string/USERNAME_Email"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:paddingBottom="@dimen/dp5"
                            android:singleLine="true"
                            android:textColor="@color/app_text_color"
                            android:textColorHint="@color/plceholder"
                            android:textSize="@dimen/text15sp"

                            />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp45"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dp20"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp20">

                    <ImageView
                        android:layout_width="@dimen/dp33"
                        android:layout_height="@dimen/dp25"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/dp2"
                        android:layout_marginEnd="@dimen/dp10"
                        android:autoMirrored="true"
                        android:contentDescription="@null"
                        android:rotationY="@integer/locale_mirror_flip"
                        android:src="@mipmap/phone" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp45"
                        android:theme="@style/LoginEditTexts">


                        <com.iamretailer.Common.CustomEditext
                            android:id="@+id/mobile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/dp2"
                            android:background="@drawable/login_edit_bg"
                            android:gravity="center_vertical"
                            android:hint="@string/phone"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:paddingBottom="@dimen/dp5"
                            android:singleLine="true"
                            android:textColor="@color/app_text_color"
                            android:textColorHint="@color/plceholder"
                            android:textSize="@dimen/text15sp"


                            />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dp20"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp20">

                    <ImageView
                        android:layout_width="@dimen/dp33"
                        android:layout_height="@dimen/dp25"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/dp2"
                        android:layout_marginEnd="@dimen/dp10"
                        android:autoMirrored="true"
                        android:contentDescription="@null"
                        android:rotationY="@integer/locale_mirror_flip"
                        android:src="@mipmap/pass" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:theme="@style/LoginEditTexts">


                        <com.iamretailer.Common.CustomEditext
                            android:id="@+id/passone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/dp2"
                            android:background="@drawable/login_edit_bg"
                            android:gravity="center_vertical"
                            android:hint="@string/PASSWORD"
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"
                            android:paddingBottom="@dimen/dp5"
                            android:singleLine="true"
                            android:textColor="@color/app_text_color"
                            android:textColorHint="@color/plceholder"
                            android:textSize="@dimen/text15sp"


                            />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_marginEnd="@dimen/dp20"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp20">

                    <ImageView
                        android:layout_width="@dimen/dp33"
                        android:layout_height="@dimen/dp25"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/dp2"
                        android:layout_marginEnd="@dimen/dp10"
                        android:autoMirrored="true"
                        android:contentDescription="@null"
                        android:rotationY="@integer/locale_mirror_flip"
                        android:src="@mipmap/con_pwd" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:theme="@style/LoginEditTexts">


                        <com.iamretailer.Common.CustomEditext
                            android:id="@+id/passtwo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/dp2"
                            android:background="@drawable/login_edit_bg"
                            android:gravity="center_vertical"
                            android:hint="@string/Con_PASSWORD"
                            android:imeOptions="actionDone"
                            android:inputType="textPassword"
                            android:paddingBottom="@dimen/dp5"
                            android:singleLine="true"
                            android:textColor="@color/app_text_color"
                            android:textColorHint="@color/plceholder"
                            android:textSize="@dimen/text15sp"

                            />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:layout_marginEnd="@dimen/dp30"
                android:layout_marginStart="@dimen/dp30"
                android:layout_marginTop="@dimen/dp50"
                android:background="@drawable/login_button">

                <com.iamretailer.Common.CustomTextview
                    android:id="@+id/cont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/Signup"
                    android:textColor="@color/button_textcolor"
                    android:textSize="@dimen/text20sp"
                    android:textStyle="bold" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_marginTop="@dimen/dp12"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <com.iamretailer.Common.CustomTextview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="@dimen/dp20"
                        android:gravity="center"
                        android:text="@string/S_text"
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/text14sp" />

                    <com.iamretailer.Common.CustomTextview
                        android:id="@+id/login_page"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="@dimen/dp10"
                        android:gravity="center"
                        android:text="@string/Log_In"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text14sp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>