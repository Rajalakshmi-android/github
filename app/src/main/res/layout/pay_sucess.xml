<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >

        <com.iamretailer.Common.CustomTextview

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/colorAccent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/text20sp"
           android:layout_marginTop="@dimen/dp10"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dp10"
            android:background="@color/app_view_color"/>

        <com.iamretailer.Common.CustomTextview
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginEnd="@dimen/dp10"
            android:text="@string/wal_alert"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/text17sp" />
        <com.iamretailer.Common.CustomTextview
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginEnd="@dimen/dp10"
            android:text="@string/wal_alert"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/text17sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:layout_marginBottom="@dimen/dp10"
            android:id="@+id/okay"
            android:background="@drawable/buy_back">
            <com.iamretailer.Common.CustomTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wal_success"
                android:paddingStart="@dimen/dp35"
                android:paddingEnd="@dimen/dp35"
                android:paddingTop="@dimen/dp4"
                android:textSize="@dimen/text18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:paddingBottom="@dimen/dp6"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginStart="@dimen/dp10"
            android:id="@+id/notokay"
            android:background="@drawable/share_back">
            <com.iamretailer.Common.CustomTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wal_failed"
                android:paddingStart="@dimen/dp30"
                android:paddingEnd="@dimen/dp30"
                android:paddingTop="@dimen/dp7"
                android:textSize="@dimen/text16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingBottom="@dimen/dp7"/>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>