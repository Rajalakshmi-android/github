<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="@dimen/dp90"
                android:layout_height="@dimen/dp80"
                android:layout_gravity="top"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/product_back1">

                <ImageView
                    android:id="@+id/place_img"
                    android:layout_width="@dimen/dp70"
                    android:layout_height="@dimen/dp70"
                    android:layout_gravity="center"
                    android:padding="@dimen/dp5"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/place_holder"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp5"
                android:layout_marginEnd="@dimen/dp20">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp10"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <com.iamretailer.Common.CustomTextview
                        android:id="@+id/p_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:text="@string/product"
                       android:textSize="@dimen/text14sp"
                        android:textColor="@color/cart_text"
                       />

                    <com.iamretailer.Common.CustomTextview
                        android:id="@+id/p_option"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginTop="@dimen/dp2"
                        android:textColor="@color/cart_text"
                       android:textSize="@dimen/text10sp"
                        android:paddingBottom="@dimen/dp1"
                        android:paddingLeft="@dimen/dp8"
                        android:paddingRight="@dimen/dp8"
                        android:paddingTop="@dimen/dp1"
                        android:background="@drawable/dms_bg"/>

                    <com.iamretailer.Common.CustomTextview
                        android:id="@+id/grams"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dms_bg"
                        android:paddingBottom="@dimen/dp1"
                        android:paddingLeft="@dimen/dp8"
                        android:paddingRight="@dimen/dp8"
                        android:paddingTop="@dimen/dp1"
                        android:visibility="gone"
                        android:text="@string/gms"
                        android:layout_marginTop="@dimen/dp2"
                        android:textColor="@color/cart_text"
                        android:textSize="@dimen/text10sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:layout_marginTop="@dimen/dp2">

                        <com.iamretailer.Common.CustomTextview
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/quantity"
                           android:textSize="@dimen/text13sp"
                            android:textColor="@color/cart_text" />

                        <com.iamretailer.Common.CustomTextview1

                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:id="@+id/p_qty"
                            android:textColor="@color/cart_text"
                           android:textSize="@dimen/text13sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="@integer/three"
                        android:layout_marginTop="@dimen/dp2">

                        <com.iamretailer.Common.CustomTextview
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/amt"
                           android:textSize="@dimen/text13sp"
                            android:textColor="@color/cart_text" />
                        <LinearLayout
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            >
                        <com.iamretailer.Common.CustomTextview1
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text9sp"
                            android:textColor="@color/cart_text"
                            android:id="@+id/cur_left"
                            android:paddingBottom="@dimen/dp1"
                            android:layout_gravity="bottom"
                            android:gravity="bottom"
                            />

                        <com.iamretailer.Common.CustomTextview1
                            android:id="@+id/p_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/qty"
                            android:gravity="start"
                           android:textSize="@dimen/text13sp"
                            android:textColor="@color/cart_text" />
                        <com.iamretailer.Common.CustomTextview1
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text10sp"
                            android:textColor="@color/cart_text"
                            android:id="@+id/cur_right"
                            android:paddingBottom="@dimen/dp1"
                            android:layout_gravity="bottom"
                            android:gravity="bottom"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end">
                            <com.iamretailer.Common.CustomTextview
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text10sp"
                                android:textColor="@color/blue"
                                android:id="@+id/cur_left1"
                                android:paddingBottom="@dimen/dp1"
                                android:layout_gravity="bottom"
                                android:gravity="bottom"
                                android:textStyle="bold"/>
                            <com.iamretailer.Common.CustomTextview
                                android:id="@+id/total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/amount"
                                android:textColor="@color/blue"
                                android:textSize="@dimen/text14sp"
                                android:textStyle="bold"/>
                            <com.iamretailer.Common.CustomTextview
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text10sp"
                                android:textColor="@color/blue"
                                android:id="@+id/cur_right1"
                                android:paddingBottom="@dimen/dp1"
                                android:textStyle="bold"
                                android:layout_gravity="bottom"
                                android:gravity="bottom"/>
                        </LinearLayout>
                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp.4dp"
            android:layout_marginTop="@dimen/dp15"
            android:id="@+id/line"
            android:background="@color/line_color"
            android:layout_marginStart="@dimen/dp90"/>


    </LinearLayout>

</LinearLayout>