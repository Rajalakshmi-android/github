<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp45"
        android:layout_marginTop="@dimen/dp10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/two"
            android:orientation="horizontal">

            <com.iamretailer.Common.CustomTextview1
                android:layout_width="@dimen/dp0"
                android:layout_weight="@dimen/value0.5"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:gravity="start|center_vertical"
                android:text="@string/order_date"
                android:textColor="@color/conf_tex"
                android:textSize="@dimen/text13sp" />

            <com.iamretailer.Common.CustomTextview
                android:id="@+id/order_date"
                android:layout_width="@dimen/dp0"
                android:layout_weight="@dimen/value1.5"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="start|center_vertical"
                android:text="@string/del_add"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/text13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/two"
            android:orientation="horizontal">

            <com.iamretailer.Common.CustomTextview1
                android:layout_width="@dimen/dp0"
                android:layout_weight="@dimen/value0.5"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:gravity="start|center_vertical"
                android:text="@string/status1"
                android:textColor="@color/conf_tex"
                android:textSize="@dimen/text13sp" />

            <com.iamretailer.Common.CustomTextview
                android:id="@+id/status"
                android:layout_width="@dimen/dp0"
                android:layout_weight="@dimen/value1.5"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="start|center_vertical"
                android:text="@string/del_add"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/text13sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/two"
            android:orientation="horizontal">

            <com.iamretailer.Common.CustomTextview1
                android:layout_width="@dimen/dp0"
                android:layout_weight="@dimen/value0.5"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:gravity="start|center_vertical"
                android:text="@string/comments"
                android:textColor="@color/conf_tex"
                android:textSize="@dimen/text13sp" />

            <com.iamretailer.Common.CustomTextview
                android:id="@+id/comment"
                android:layout_width="@dimen/dp0"
                android:layout_weight="@dimen/value1.5"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="start|center_vertical"
                android:text="@string/del_add"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/text13sp" />

        </LinearLayout>
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp.4dp"
            android:layout_marginTop="@dimen/dp10"
            android:background="@color/line_color" />

    </LinearLayout>

</LinearLayout>