<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp15">

        <ImageView
            android:id="@+id/select"
            android:layout_width="@dimen/dp18"
            android:layout_height="@dimen/dp18"
            android:padding="@dimen/dp2"
            android:src="@mipmap/filter_unchec" />

        <com.iamretailer.Common.CustomTextview
            android:id="@+id/sub_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp5"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/text14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/price_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:orientation="vertical"
        android:padding="@dimen/dp10">

        <com.iamretailer.Common.CustomTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price_range"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/text14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp5">

            <com.iamretailer.Common.widget.RangeSeekBar
                android:id="@+id/price_values"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:padding="@dimen/dp3"
                app:rsb_gravity="center"
                app:rsb_indicator_background_color="@color/app_view_color"
                app:rsb_indicator_height="wrap_content"
                app:rsb_indicator_radius="@dimen/dp1"
                app:rsb_mode="range"
                app:rsb_progress_color="@color/colorAccent"
                app:rsb_progress_height="@dimen/dp3"
                app:rsb_thumb_height="@dimen/dp18"
                app:rsb_thumb_width="@dimen/dp18"
                app:rsb_tick_mark_mode="number" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp4">

                    <com.iamretailer.Common.CustomTextview
                        android:layout_width="@dimen/dp45"
                        android:layout_height="wrap_content"
                        android:text="@string/from"
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/text13sp" />

                    <com.iamretailer.Common.CustomTextview
                        android:id="@+id/textMin1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp10"
                        android:layout_marginStart="@dimen/dp5"
                        android:background="@drawable/qty_back"
                        android:paddingBottom="@dimen/dp2"
                        android:paddingEnd="@dimen/dp6"
                        android:paddingStart="@dimen/dp6"
                        android:paddingTop="@dimen/dp2"
                        android:text="12"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text13sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp4">

                    <com.iamretailer.Common.CustomTextview
                        android:layout_width="@dimen/dp45"
                        android:layout_height="wrap_content"
                        android:text="@string/too"
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/text13sp" />

                    <com.iamretailer.Common.CustomTextview
                        android:id="@+id/textMax1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp10"
                        android:layout_marginStart="@dimen/dp5"
                        android:background="@drawable/qty_back"
                        android:paddingBottom="@dimen/dp2"
                        android:paddingEnd="@dimen/dp6"
                        android:paddingStart="@dimen/dp6"
                        android:paddingTop="@dimen/dp2"
                        android:text="12"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text13sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>