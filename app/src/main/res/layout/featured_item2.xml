<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/product"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/product_back"
        android:orientation="vertical"
      >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fav">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:padding="@dimen/dp5"
                    android:layout_marginStart="@dimen/dp5">
                    <ImageView
                        android:layout_width="@dimen/dp18"
                        android:layout_height="@dimen/dp18"
                        android:src="@mipmap/like"
                        android:visibility="gone"
                        android:id="@+id/like"/>
                    <ImageView
                        android:layout_width="@dimen/dp18"
                        android:layout_height="@dimen/dp18"
                        android:src="@mipmap/unlike"
                        android:id="@+id/unlike"/>

                </FrameLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:gravity="end"
                    android:paddingStart="@dimen/dp5"
                    android:layout_marginEnd="@dimen/dp5"
                    android:paddingEnd="@dimen/dp5">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/r1"
                            android:layout_width="@dimen/dp12"
                            android:layout_height="@dimen/dp12"
                            android:layout_marginEnd="@dimen/dp2"
                            android:src="@mipmap/un_fill" />

                        <ImageView
                            android:id="@+id/r2"
                            android:layout_width="@dimen/dp12"
                            android:layout_height="@dimen/dp12"
                            android:layout_marginEnd="@dimen/dp2"
                            android:src="@mipmap/fill" />

                        <ImageView
                            android:id="@+id/r3"
                            android:layout_width="@dimen/dp12"
                            android:layout_height="@dimen/dp12"
                            android:layout_marginEnd="@dimen/dp2"
                            android:src="@mipmap/fill" />

                        <ImageView
                            android:id="@+id/r4"
                            android:layout_width="@dimen/dp12"
                            android:layout_height="@dimen/dp12"
                            android:layout_marginEnd="@dimen/dp2"
                            android:src="@mipmap/fill" />

                        <ImageView
                            android:id="@+id/r5"
                            android:layout_width="@dimen/dp12"
                            android:layout_height="@dimen/dp12"
                            android:src="@mipmap/fill" />

                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/prod_img"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp120"
                        android:layout_marginStart="@dimen/dp10"
                        android:layout_marginEnd="@dimen/dp10" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp6"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.iamretailer.krishnasupermarket.Common.CustomTextview
                        android:id="@+id/prod_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/product"
                        android:ellipsize="end"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/app_text_color"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/dp2"
                        android:gravity="center">

                        <com.iamretailer.krishnasupermarket.Common.CustomTextview
                            android:id="@+id/prod_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|center_vertical"
                            android:text=""
                            android:textColor="@color/app_text_color"
                            android:textStyle="bold" />


                        <com.iamretailer.krishnasupermarket.Common.CustomTextview
                            android:id="@+id/orginal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp4"
                            android:background="@drawable/strike"
                            android:gravity="start|center_vertical"
                            android:text=""
                            android:textColor="@color/app_text_color"
                            android:textSize="@dimen/text12sp" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/add_to_cart_bg"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="@dimen/dp8"
                android:layout_marginEnd="@dimen/dp8"
                android:id="@+id/add_to_cart"
                android:layout_marginBottom="@dimen/dp8">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp7"
                    android:paddingEnd="@dimen/dp7">

                    <ImageView
                        android:layout_width="@dimen/dp15"
                        android:layout_height="@dimen/dp15"
                        android:src="@mipmap/plus_add"
                        android:layout_gravity="center"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <com.iamretailer.krishnasupermarket.Common.CustomTextview
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/add"
                            android:padding="@dimen/dp3"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text14sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:gravity="center"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>




    </LinearLayout>
</LinearLayout>