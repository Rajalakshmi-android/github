<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/product_back"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/prod_img"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp150"
                        android:layout_marginEnd="@dimen/dp10"
                        android:layout_marginStart="@dimen/dp10"
                        android:layout_marginTop="@dimen/dp5" />

                    <LinearLayout
                        android:id="@+id/fav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/dp10"
                        android:layout_marginTop="@dimen/dp13">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/like"
                                android:layout_width="@dimen/dp18"
                                android:layout_height="@dimen/dp18"
                                android:src="@mipmap/like"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/unlike"
                                android:layout_width="@dimen/dp18"
                                android:layout_height="@dimen/dp18"
                                android:src="@mipmap/unlike" />

                        </FrameLayout>
                    </LinearLayout>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp6"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.iamretailer.Common.CustomTextview
                        android:id="@+id/prod_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:paddingEnd="@dimen/dp4"
                        android:paddingStart="@dimen/dp4"
                        android:singleLine="true"
                        android:text="@string/product"
                        android:textColor="@color/app_text_color" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp4">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/r1"
                                android:layout_width="@dimen/dp12"
                                android:layout_height="@dimen/dp12"
                                android:layout_marginEnd="@dimen/dp2"
                                android:src="@mipmap/un_fill" />

                            <ImageView
                                android:id="@+id/r2"
                                android:layout_width="@dimen/dp12"
                                android:layout_height="@dimen/dp12"
                                android:layout_marginEnd="@dimen/dp2"
                                android:src="@mipmap/fill" />

                            <ImageView
                                android:id="@+id/r3"
                                android:layout_width="@dimen/dp12"
                                android:layout_height="@dimen/dp12"
                                android:layout_marginEnd="@dimen/dp2"
                                android:src="@mipmap/fill" />

                            <ImageView
                                android:id="@+id/r4"
                                android:layout_width="@dimen/dp12"
                                android:layout_height="@dimen/dp12"
                                android:layout_marginEnd="@dimen/dp2"
                                android:src="@mipmap/fill" />

                            <ImageView
                                android:id="@+id/r5"
                                android:layout_width="@dimen/dp12"
                                android:layout_height="@dimen/dp12"
                                android:src="@mipmap/fill" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp2"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.iamretailer.Common.CustomTextview
                            android:id="@+id/prod_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|center_vertical"
                            android:text=""
                            android:textColor="@color/app_text_color"
                            android:textStyle="bold" />


                        <com.iamretailer.Common.CustomTextview
                            android:id="@+id/orginal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp4"
                            android:background="@drawable/strike"
                            android:gravity="start|center_vertical"
                            android:text=""
                            android:textColor="@color/app_text_color"
                            android:textSize="@dimen/text12sp" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_to_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp8"
                android:layout_marginEnd="@dimen/dp8"
                android:layout_marginStart="@dimen/dp8"
                android:background="@drawable/add_to_cart_bg"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/dp7"
                    android:paddingStart="@dimen/dp7">

                    <ImageView
                        android:layout_width="@dimen/dp15"
                        android:layout_height="@dimen/dp15"
                        android:layout_gravity="center"
                        android:src="@mipmap/plus_add" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <com.iamretailer.Common.CustomTextview
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="@dimen/dp3"
                            android:text="@string/add"
                            android:textColor="@color/button_textcolor"
                            android:textSize="@dimen/text14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>