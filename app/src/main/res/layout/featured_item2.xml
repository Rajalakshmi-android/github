<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/product">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/product_back1"
        android:orientation="vertical"
        android:id="@+id/items_bg"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp10"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="vertical">

            <FrameLayout
                android:layout_marginTop="@dimen/dp5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp120">

                <ImageView
                    android:id="@+id/prod_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/dp10"
                android:gravity="left"
                android:orientation="vertical">

                    <com.iamretailer.krishnasupermarket.Common.CustomTextview
                        android:id="@+id/prod_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:singleLine="false"
                        android:text=""
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/dp12"
                        android:visibility="visible" />

                <com.iamretailer.krishnasupermarket.Common.CustomTextview1
                    android:id="@+id/prod_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="false"
                    android:text="@string/product"
                    android:textColor="@color/app_text_color"
                    android:textStyle="bold"
                    android:textSize="@dimen/dp13" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp2"
                    android:layout_marginBottom="@dimen/dp4"
                    android:orientation="horizontal">

                    <com.iamretailer.krishnasupermarket.Common.CustomTextview1
                        android:id="@+id/grms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp5"
                        android:background="@drawable/dms_bg"
                        android:ellipsize="end"
                        android:paddingBottom="@dimen/dp2"
                        android:paddingLeft="@dimen/dp8"
                        android:paddingRight="@dimen/dp8"
                        android:paddingTop="@dimen/dp1"
                        android:singleLine="false"
                        android:text=""
                        android:textColor="@color/text_color2"
                        android:textSize="@dimen/dp10"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp3"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/r1"
                            android:layout_width="@dimen/dp10"
                            android:layout_height="@dimen/dp10"
                            android:src="@mipmap/fill" />

                        <ImageView
                            android:id="@+id/r2"
                            android:layout_width="@dimen/dp10"
                            android:layout_height="@dimen/dp10"
                            android:layout_marginLeft="@dimen/dp2"
                            android:src="@mipmap/fill" />

                        <ImageView
                            android:id="@+id/r3"
                            android:layout_width="@dimen/dp10"
                            android:layout_height="@dimen/dp10"
                            android:layout_marginLeft="@dimen/dp2"
                            android:src="@mipmap/fill" />

                        <ImageView
                            android:id="@+id/r4"
                            android:layout_width="@dimen/dp10"
                            android:layout_height="@dimen/dp10"
                            android:layout_marginLeft="@dimen/dp2"
                            android:src="@mipmap/fill" />

                        <ImageView
                            android:id="@+id/r5"
                            android:layout_width="@dimen/dp10"
                            android:layout_height="@dimen/dp10"
                            android:layout_marginLeft="@dimen/dp2"
                            android:src="@mipmap/fill" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp10"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="@dimen/dp0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp5"
                            android:orientation="horizontal">

                            <com.iamretailer.krishnasupermarket.Common.CustomTextview
                                android:id="@+id/sp_cur_left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:gravity="center"
                                android:paddingBottom="@dimen/dp2"
                                android:textColor="@color/price_textcolor"
                                android:textSize="@dimen/text9sp"
                                android:textStyle="bold" />

                            <com.iamretailer.krishnasupermarket.Common.CustomTextview
                                android:id="@+id/prod_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/cart"
                                android:textColor="@color/blue"
                                android:textSize="@dimen/text14sp"
                                android:textStyle="bold" />


                            <com.iamretailer.krishnasupermarket.Common.CustomTextview
                                android:id="@+id/sp_cur_right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:gravity="center"
                                android:paddingBottom="@dimen/dp2"
                                android:textColor="@color/price_textcolor"
                                android:textSize="@dimen/text9sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/black_line"
                            android:orientation="horizontal">

                            <com.iamretailer.krishnasupermarket.Common.CustomTextview
                                android:id="@+id/or_cur_left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:gravity="center"
                                android:paddingBottom="@dimen/dp2"
                                android:textColor="@color/textcolor"
                                android:textSize="@dimen/text9sp"
                                />

                            <com.iamretailer.krishnasupermarket.Common.CustomTextview
                                android:id="@+id/orginal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/cart"
                                android:textColor="@color/textcolor"
                                android:textSize="@dimen/text12sp" />

                            <com.iamretailer.krishnasupermarket.Common.CustomTextview
                                android:id="@+id/or_cur_right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:gravity="center"
                                android:paddingBottom="@dimen/dp2"
                                android:textColor="@color/textcolor"
                                android:textSize="@dimen/text9sp"
                                />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dp0"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9"
                        android:layout_marginTop="@dimen/dp7"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/fav">
                                <FrameLayout
                                    android:layout_width="@dimen/dp30"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:paddingStart="@dimen/dp5">

                                    <ImageView
                                        android:id="@+id/like"
                                        android:layout_width="@dimen/dp20"
                                        android:layout_height="@dimen/dp20"
                                        android:src="@mipmap/like"
                                        android:visibility="gone" />

                                    <ImageView
                                        android:id="@+id/unlike"
                                        android:layout_width="@dimen/dp20"
                                        android:layout_height="@dimen/dp20"
                                        android:src="@mipmap/unlike" />

                                </FrameLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/add_to_cart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingEnd="@dimen/dp1">

                                <FrameLayout
                                    android:layout_width="@dimen/dp25"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:paddingStart="@dimen/dp1">

                                    <ImageView
                                        android:id="@+id/cart_like"
                                        android:layout_width="@dimen/dp20"
                                        android:layout_height="@dimen/dp21"
                                        android:src="@mipmap/product_cart"
                                        android:visibility="gone"
                                        android:autoMirrored="true"
                                        android:rotationY="@integer/locale_mirror_flip"/>

                                    <ImageView
                                        android:id="@+id/cart_unlike"
                                        android:layout_width="@dimen/dp20"
                                        android:layout_height="@dimen/dp20"
                                        android:src="@mipmap/cart_unlike"
                                        android:autoMirrored="true"
                                        android:rotationY="@integer/locale_mirror_flip"/>


                                </FrameLayout>
                            </LinearLayout>



                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
