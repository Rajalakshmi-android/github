<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="@dimen/dp12"
        android:layout_height="match_parent"
        android:id="@+id/font_view"
        android:visibility="gone"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/item_bg"
        android:background="@drawable/cart_bg"
        android:layout_marginBottom="@dimen/dp5">

        <LinearLayout
            android:id="@+id/cat_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <FrameLayout
                android:id="@+id/brand"
                android:layout_width="@dimen/dp65"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp20"
                android:paddingTop="@dimen/dp5"
                android:paddingEnd="@dimen/dp5"
                android:paddingStart="@dimen/dp5"
                >
                <ImageView
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp60"
                    android:layout_gravity="center"
                    android:id="@+id/cat_img"
                    android:autoMirrored="true"
                    android:src="@mipmap/logo"
                    android:rotationY="@integer/locale_mirror_flip"/>
                <ImageView
                    android:id="@+id/more"
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp60"
                    android:layout_gravity="center"
                    android:src="@mipmap/next"
                    android:autoMirrored="true"
                    android:padding="@dimen/dp18"
                    android:rotationY="@integer/locale_mirror_flip"
                    android:visibility="gone" />

            </FrameLayout>


            <com.iamretailer.Common.CustomTextview1
                android:id="@+id/store_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/product"
                android:singleLine="true"
                android:layout_marginBottom="@dimen/dp30"
                android:textColor="@color/cat_text"
                android:layout_gravity="center"
                android:textSize="@dimen/text13sp" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>